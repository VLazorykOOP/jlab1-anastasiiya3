import java.util.Arrays;

public class MatrixAnalyzer {

    public static void main(String[] args) {
        // –ü—Ä–∏–∫–ª–∞–¥ —Ü—ñ–ª–æ—á–∏—Å–µ–ª—å–Ω–æ—ó –º–∞—Ç—Ä–∏—Ü—ñ A(n, n), –¥–µ n = 4 (n <= 15)
        int[][] matrix = {
            {5, 5, 5, 5},   // –†—è–¥–æ–∫ 0: –í—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –æ–¥–Ω–∞–∫–æ–≤—ñ
            {1, 2, 3, 4},
            {7, 7, 7, 7},   // –†—è–¥–æ–∫ 2: –í—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –æ–¥–Ω–∞–∫–æ–≤—ñ
            {2, 4, 6, 8}    // –°—Ç–æ–≤–ø—á–∏–∫–∏ 1, 3 - –ø–∞—Ä–Ω—ñ; –†—è–¥–æ–∫ 3 - –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –ø–∞—Ä–Ω—ñ
        };

        System.out.println("‚úÖ –û—Ä–∏–≥—ñ–Ω–∞–ª—å–Ω–∞ –º–∞—Ç—Ä–∏—Ü—è:");
        printMatrix(matrix);

        // --- –ß–∞—Å—Ç–∏–Ω–∞ 1: –ü–æ—à—É–∫ —Ä—è–¥–∫—ñ–≤ –∑ –æ–¥–Ω–∞–∫–æ–≤–∏–º–∏ –µ–ª–µ–º–µ–Ω—Ç–∞–º–∏ ---
        findRowsWithSameElements(matrix);

        // --- –ß–∞—Å—Ç–∏–Ω–∞ 2: –ü–æ—à—É–∫ —Å—Ç–æ–≤–ø—á–∏–∫—ñ–≤ –∑ —É—Å—ñ–º–∞ –ø–∞—Ä–Ω–∏–º–∏ –µ–ª–µ–º–µ–Ω—Ç–∞–º–∏ ---
        findColumnsWithAllEvenElements(matrix);
    }

    /**
     * –ó–Ω–∞—Ö–æ–¥–∏—Ç—å —ñ –¥—Ä—É–∫—É—î –Ω–æ–º–µ—Ä–∏ —Ä—è–¥–∫—ñ–≤ (—ñ–Ω–¥–µ–∫—Å–∏), —É —è–∫–∏—Ö –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –æ–¥–Ω–∞–∫–æ–≤—ñ.
     * @param matrix –ú–∞—Ç—Ä–∏—Ü—è –¥–ª—è –∞–Ω–∞–ª—ñ–∑—É.
     */
    public static void findRowsWithSameElements(int[][] matrix) {
        System.out.println("\n--- –†—è–¥–∫–∏ –∑ –æ–¥–Ω–∞–∫–æ–≤–∏–º–∏ –µ–ª–µ–º–µ–Ω—Ç–∞–º–∏ ---");
        int n = matrix.length;
        boolean found = false;

        for (int i = 0; i < n; i++) {
            boolean isSame = true;
            // –ü–æ—Ä—ñ–≤–Ω—é—î–º–æ –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ —Ä—è–¥–∫–∞ –∑ –ø–µ—Ä—à–∏–º –µ–ª–µ–º–µ–Ω—Ç–æ–º —Ü—å–æ–≥–æ —Ä—è–¥–∫–∞
            int firstElement = matrix[i][0];
            for (int j = 1; j < n; j++) {
                if (matrix[i][j] != firstElement) {
                    isSame = false;
                    break;
                }
            }

            if (isSame) {
                System.out.printf("üëâ –†—è–¥–æ–∫ –∑ —ñ–Ω–¥–µ–∫—Å–æ–º %d (–Ω–æ–º–µ—Ä %d): –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ = %d%n", i, i + 1, firstElement);
                found = true;
            }
        }

        if (!found) {
            System.out.println("–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ —Ä—è–¥–∫—ñ–≤, —É —è–∫–∏—Ö –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –æ–¥–Ω–∞–∫–æ–≤—ñ.");
        }
    }

    /**
     * –ó–Ω–∞—Ö–æ–¥–∏—Ç—å —ñ –¥—Ä—É–∫—É—î –Ω–æ–º–µ—Ä–∏ —Å—Ç–æ–≤–ø—á–∏–∫—ñ–≤ (—ñ–Ω–¥–µ–∫—Å–∏), –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –≤ —è–∫–∏—Ö –ø–∞—Ä–Ω—ñ.
     * @param matrix –ú–∞—Ç—Ä–∏—Ü—è –¥–ª—è –∞–Ω–∞–ª—ñ–∑—É.
     */
    public static void findColumnsWithAllEvenElements(int[][] matrix) {
        System.out.println("\n--- –°—Ç–æ–≤–ø—á–∏–∫–∏ –∑ —É—Å—ñ–º–∞ –ø–∞—Ä–Ω–∏–º–∏ –µ–ª–µ–º–µ–Ω—Ç–∞–º–∏ ---");
        int n = matrix.length;
        boolean found = false;

        for (int j = 0; j < n; j++) { // –Ü—Ç–µ—Ä–∞—Ü—ñ—è –ø–æ —Å—Ç–æ–≤–ø—á–∏–∫–∞—Ö (j)
            boolean isAllEven = true;
            for (int i = 0; i < n; i++) { // –Ü—Ç–µ—Ä–∞—Ü—ñ—è –ø–æ –µ–ª–µ–º–µ–Ω—Ç–∞—Ö —Å—Ç–æ–≤–ø—á–∏–∫–∞ (i)
                if (matrix[i][j] % 2 != 0) {
                    isAllEven = false;
                    break;
                }
            }

            if (isAllEven) {
                System.out.printf("üëâ –°—Ç–æ–≤–ø—á–∏–∫ –∑ —ñ–Ω–¥–µ–∫—Å–æ–º %d (–Ω–æ–º–µ—Ä %d): –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –ø–∞—Ä–Ω—ñ.%n", j, j + 1);
                found = true;
            }
        }

        if (!found) {
            System.out.println("–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ —Å—Ç–æ–≤–ø—á–∏–∫—ñ–≤, —É —è–∫–∏—Ö –≤—Å—ñ –µ–ª–µ–º–µ–Ω—Ç–∏ –ø–∞—Ä–Ω—ñ.");
        }
    }

    /**
     * –î–æ–ø–æ–º—ñ–∂–Ω–∏–π –º–µ—Ç–æ–¥ –¥–ª—è –¥—Ä—É–∫—É –º–∞—Ç—Ä–∏—Ü—ñ.
     */
    public static void printMatrix(int[][] matrix) {
        for (int[] row : matrix) {
            System.out.println(Arrays.toString(row));
        }
    }
}
       
    
        


